<h1>Eat the Burgers!</h1>

<div class="row">
<div class="col sm 2"></div>

<div class="col sm 8">
  <img src="/img/american-burger.jpg" alt="burger">
</div>

<div class="col sm 2"></div>
</div>

<h2>Burgers to eat!</h2>

<div class="row">
<div class="col sm 1"></div>

<div class="col sm 10">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col sm 1"></div>
</div>

<h2>Eaten Burgers!</h2>

<div class="row">
<div class="col sm 1"></div>

<div class="col sm 10">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour=true}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="col sm 1"></div>
</div>

<h2>Add a Burger</h2>

<div class="row">
<div class="col sm 1"></div>

<div class="col sm 10">
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

<div class="col sm 1"></div>
</div>